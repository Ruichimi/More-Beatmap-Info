{
    "manifest_version": 3,
    "name": "osu! More Beatmaps Info",
    "version": "1.0.1",
    "description": "Adds to osu! beatmaps selection page additional details to help you choose the right beatmaps more efficiently and conveniently",
    "host_permissions": [
        "https://osu.ppy.sh/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["svg/icon.svg"],
            "matches": ["https://osu.ppy.sh/*"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://osu.ppy.sh/*",
                "https://osu.ppy.sh/beatmapsets/*"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "mainCss.css"
            ],
            "run_at": "document_end"
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "mbi@extension.osu"
        }
    }
}
